<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.gallery.stockgallery.imageList.MainViewModel" />

        <variable
            name="presenter"
            type="com.gallery.stockgallery.imageList.MainPresenter" />

        <import type="com.gallery.stockgallery.R" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.gallery.stockgallery.imageList.MainActivity">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="@dimen/very_small"
            android:paddingTop="@dimen/very_small"
            android:visibility="visible" />

    </RelativeLayout>
</layout>